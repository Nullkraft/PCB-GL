+                                    board_appearance,
+                                    top_bot_appearance);
+#else
+  objects = object3d_from_contours (board_outline,
+                                     HACK_BOARD_THICKNESS / 2, /* Bottom */
+                                    -HACK_BOARD_THICKNESS / 2, /* Top */
+                                    board_appearance,
+                                    top_bot_appearance);
+#endif
+
+  destroy_appearance (board_appearance);
+  destroy_appearance (top_bot_appearance);
 
   poly_Free (&board_outline);
 
   return objects;
+#endif
