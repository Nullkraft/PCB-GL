+static void
+poly_InclVertex_int (VNODE * after, VNODE * node)
+{
+  assert (after != NULL);
+  assert (node != NULL);
+
+  node->prev = after;
+  node->next = after->next;
+  after->next = after->next->prev = node;
+}
