+static void
+M_Set_Parentage (POLYAREA *poly, POLYPARENTAGE parentage)
+{
+  POLYAREA *piece = poly;
+
+  if (poly == NULL)
+    return;
+
+  do
+    {
+      piece->parentage = parentage;
+    }
+  while ((piece = piece->f) != poly);
+
+}
