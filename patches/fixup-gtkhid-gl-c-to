+static void
+set_depth_on_all_active_gc (render_priv *priv, float depth)
+{
+  GList *iter;
+
+  for (iter = priv->active_gc_list;
+       iter != NULL;
+       iter = g_list_next (iter))
+    {
+      hidGC gc = iter->data;
+
+      hidgl_set_depth (gc, depth);
+    }
+}
 
