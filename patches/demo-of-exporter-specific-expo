+/* ---------------------------------------------------------------------------
+ * draws one layer group.  Returns non-zero if pins and pads should be
+ * drawn with this group.
+ */
+#if 0
+static void
+DrawLayerGroup (int group, const BoxType * drawn_area)
+{
+  int i, rv = 1;
+  int layernum;
+  LayerType *Layer;
+  int n_entries = PCB->LayerGroups.Number[group];
