+	if ((ptr->MovedPoint->X == line->Point1.X) &&
+	    (ptr->MovedPoint->Y == line->Point1.Y)) {
+	  nudge = &line->Point1;
+	  dprintf("    nudge point1\n");
+	}
+	else {
+	  dprintf("    nudge point2\n");
+	  nudge = &line->Point2;
+	}
